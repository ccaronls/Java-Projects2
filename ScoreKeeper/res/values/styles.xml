<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Dark.FullScreen" />

    <style name="CustomSplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- below one -->
        <item name="android:windowBackground">@drawable/mtg_splash</item>
    </style>

    <style name="KeeperText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="KeeperText.Button">
        <item name="android:background">@drawable/rounded_rect_16</item>
    </style>
</resources>