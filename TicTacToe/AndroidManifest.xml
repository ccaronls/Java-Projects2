        android:icon="@drawable/tictactoe_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
        >
        
        <activity android:name=".TicTacToeActivity" android:launchMode="singleTask" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
