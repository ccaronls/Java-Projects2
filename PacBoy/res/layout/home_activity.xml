<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Pac Boy"
        android:textSize="20sp"
        android:textStyle="bold|italic" />
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1">
	        
	        <Button
	            android:id="@+id/buttonSmallEasy" 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="fill_parent"
	            android:text="Small\nEasy"/>
	        
	        <Button
	            android:id="@+id/buttonSmallHard" 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="fill_parent"
	            android:text="Small\nHard"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1">
	        
	        <Button
	            android:id="@+id/buttonMedEasy" 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="fill_parent"
	            android:text="Medium\nEasy"/>
	        
	        <Button
	            android:id="@+id/buttonMedHard"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="Medium\nHard" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1">
	        
	        <Button
	            android:id="@+id/buttonLargeEasy" 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="fill_parent"
	            android:text="Large\nEasy"/>
	        
	        <Button
	            android:id="@+id/buttonLargeHard" 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="fill_parent"
	            android:text="Large\nHard"/>
	        
	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout>