<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Pac Boy"
        android:textSize="20sp"
        android:textStyle="bold|italic" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal" >

	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:orientation="vertical">
	        
	        <Button
                style="@style/HomeButtonStyle"
	            android:id="@+id/buttonSmallEasy" 
	            android:layout_width="fill_parent"
	            android:layout_weight="1"
	            android:layout_height="0dp"
	            android:text="Small\nEasy"/>
	        
	        <Button
	            style="@style/HomeButtonStyle"
	            android:id="@+id/buttonSmallHard" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
	            android:text="Small\nHard"/>

            <Button
                style="@style/HomeButtonStyle"
                android:id="@+id/buttonSmallVeryHard" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Small\nVery Hard"/>
	        	        	        
	    </LinearLayout>
	    
	    <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
	        
	        <Button
                style="@style/HomeButtonStyle"
	            android:id="@+id/buttonMedEasy" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
	            android:text="Medium\nEasy"/>
	        
	        <Button
                style="@style/HomeButtonStyle"
	            android:id="@+id/buttonMedHard"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
	            android:text="Medium\nHard" />
            
            <Button
                style="@style/HomeButtonStyle"
                android:id="@+id/buttonMedVeryHard" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Med\nVery Hard"/>
	        	        
	    </LinearLayout>
	    
	    <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
	        
	        <Button
                style="@style/HomeButtonStyle"
	            android:id="@+id/buttonLargeEasy" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
	            android:text="Large\nEasy"/>
	        
	        <Button
                style="@style/HomeButtonStyle"
	            android:id="@+id/buttonLargeHard" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
	            android:text="Large\nHard"/>
            
            <Button
                style="@style/HomeButtonStyle"
                android:id="@+id/buttonLargeVeryHard" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Large\nVery Hard"/>
	        	        
	    </LinearLayout>
	    
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <Button
                style="@style/HomeButtonStyle"
                android:id="@+id/buttonHugeEasy" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Huge\nEasy"/>
            
            <Button
                style="@style/HomeButtonStyle"
                android:id="@+id/buttonHugeHard" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Huge\nHard"/>
            
            <Button
                style="@style/HomeButtonStyle"
                android:id="@+id/buttonHugeVeryHard" 
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Huge\nVery Hard"/>
            
        </LinearLayout>	    
	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" >
	    
	    <Button
	        style="@style/HomeButtonStyle"
	        android:id="@+id/buttonViewLeaderboards"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="Leaderboards"/>
	    
	</LinearLayout>
</LinearLayout>