<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     tools:background="#888">
    <ImageView
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/draganddrop_divider"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvLineNum"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="3dp"
        android:text="88"
        android:textSize="32dp"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:id="@+id/ibDelete"
        android:layout_width="@dimen/dnd_icon_dim_sm"
        android:layout_height="@dimen/dnd_icon_dim_sm"
        android:src="@android:drawable/ic_delete"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/draganddrop_divider"
        android:layout_alignParentBottom="true"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:layout_height="48dp"
        android:layout_toRightOf="@id/tvLineNum"
        android:layout_toLeftOf="@id/ibDelete"/>
</RelativeLayout>