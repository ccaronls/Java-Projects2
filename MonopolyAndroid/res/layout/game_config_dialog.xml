<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvStartMoney"
        style="@style/TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Money"
        android:layout_margin="5dp"
        android:gravity="center"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvJailBump"
        style="@style/TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jail Bump"
        android:layout_margin="5dp"
        android:gravity="center"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <cc.lib.android.CCNumberPicker
        android:id="@+id/npStartMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvStartMoney"
        app:layout_constraintStart_toStartOf="@id/tvStartMoney"
        app:layout_constraintEnd_toEndOf="@id/tvStartMoney"/>

    <ToggleButton
        android:id="@+id/cbJailBumpEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvJailBump"
        app:layout_constraintEnd_toEndOf="@id/tvJailBump"
        app:layout_constraintStart_toStartOf="@id/tvJailBump"
        app:layout_constraintTop_toTopOf="@id/npStartMoney"
        app:layout_constraintBottom_toBottomOf="@id/npStartMoney"/>


</android.support.constraint.ConstraintLayout>