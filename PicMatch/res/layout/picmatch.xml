<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView android:id="@+id/iv1"
                style="@style/imageViewStyle"
                android:src="@android:drawable/star_big_on"/>
            <ImageView android:id="@+id/iv2"
                style="@style/imageViewStyle"
                android:src="@android:drawable/star_big_on"/>
            
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView android:id="@+id/iv3"
                style="@style/imageViewStyle"
                android:src="@android:drawable/star_big_on"/>
            <ImageView android:id="@+id/ivQmark"
                style="@style/imageViewStyle"
                android:src="@drawable/qmark"/>
            
            
        </LinearLayout>
        
    </LinearLayout>

    <ImageView android:id="@+id/ivChoice1"
        style="@style/imageViewStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/star_big_on"/>
        
    <ImageView android:id="@+id/ivChoice2"
        style="@style/imageViewStyle"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/star_big_on"/>

    <ImageView android:id="@+id/ivChoice3"
        style="@style/imageViewStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/star_big_on"/>
    
    <ImageView android:id="@+id/ivChoice4"
        style="@style/imageViewStyle"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/star_big_on"/>
    
</RelativeLayout>
