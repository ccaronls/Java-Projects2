<resources>
    <style name="dice">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="dice_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">@dimen/text_height_header</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="dice_red" parent="dice">
        <item name="dieColor">#f00</item>
        <item name="pipColor">#fff</item>
    </style>

    <style name="dice_text" parent="dice">
        <item name="android:textSize">@dimen/text_height_huge</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
</resources>