<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="cc.game.zombicide.android.OrganizeViewModel" />

        <variable
            name="character"
            type="cc.lib.zombicide.ZCharacter" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <cc.game.zombicide.android.OrganizeLayout
        style="@style/ZOrganizeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        backpackPosition="@{position}"
        tagBackpackItem="@{character}">

        <TextView
            android:id="@+id/tvItemName"
            style="@style/h2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="3dp"
            android:text="@{character.backpack.get(position).label}"
            tools:text="WATER" />

    </cc.game.zombicide.android.OrganizeLayout>
</layout>