<resources>


    <style name="ZAppTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="ZTooltipDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:maxWidth">200dp</item>
    </style>

    <style name="ZOrganizeDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
    </style>

    <style name="h1" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2" parent="h1">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="h3" parent="h1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="body" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="container">
        <item name="android:background">@drawable/dragndrop_container_outline</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ZOrganizeColumnHeader" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ZButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:tint">@color/dpad_color</item>
        <item name="android:textColor">@color/dpad_color</item>
        <item name="android:background">@drawable/zbutton_background</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="ZDPadButton" parent="ZButton">
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">32dip</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="ZOrganizeCharacterSlot" parent="h3">
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>