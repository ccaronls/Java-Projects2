<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <cc.game.soc.android.SOCView
            android:id="@+id/soc_barbarian"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <cc.game.soc.android.SOCView
            android:id="@+id/soc_user"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <cc.game.soc.android.SOCView
            android:id="@+id/soc_event_cards"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <cc.game.soc.android.SOCView
            android:id="@+id/soc_dice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ListView
            android:id="@+id/soc_menu_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <cc.game.soc.android.SOCView
            android:id="@+id/soc_board"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <cc.game.soc.android.SOCView
            android:id="@+id/soc_player_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <cc.game.soc.android.SOCView
            android:id="@+id/soc_player_middle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <cc.game.soc.android.SOCView
            android:id="@+id/soc_player_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>