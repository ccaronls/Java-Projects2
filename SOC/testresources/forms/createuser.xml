 <form type="POPUP">
   <row>
     <label w="1"/>
     <label w="1"/>
     <label w="1"/>
     <label hw="1"/>
   </row>
   <row>
     <label txt="create new account"/>
     <label id="ERROR"/>
   </row>
   <div/>
   <row>
     <label txt="username" w="1"/>
     <textinput min="4" max="12" var="username"
      regEx="[a-z][A-Z][0-9]_"/>
   </row>
   <row>
     <label txt="password" w="1"/>
     <passwordinput min="4" max="12" var="password"/>
   </row>
   <row>
     <label txt="password confirm" w="1"/>
     <passwordinput min="4" max="12" var="password_confirm"/>
   </row>
   <row>
     <label txt="email" w="1"/>
     <textinput var="email" regEx="([a-z][A-Z][0-9]-_)+@([a-z][A-Z][0-9]_)+\.([a-z][A-Z][0-9]_)+"/>
   </row>
   <row>
     <label txt="first name" w="1"/>
     <textinput var="firstname"/>
   </row>
   <row>
     <label txt="last name" w="1"/>
     <textinput var="lastname"/>
   </row>
   <div/>
   <row>
     <submit txt="cancel" action="disconnect" hw="1" w="2"/>
     <submit txt="submit" action="createuser ${username} ${password} ${password_confirm}" hw="1" />
   </row>
= </form>