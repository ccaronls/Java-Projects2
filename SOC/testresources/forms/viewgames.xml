<form type="POPUP">
  <label txt="Open Games" hjust="CENTER"/>
  <row cols="1">
    <button id="SORT" txt="User" action="user"/>
    <button id="SORT" txt="Min rank" action="minRank"/>
    <button id="SORT" txt="Board" action="boardType"/>
    <button id="SORT" txt="Joind" action="numJoined"/>
    <label hw="1"/>
  </row>
  <rowlist cols="1" id="LIST">
  	<label id="user"/>
  	<label id="rank"/>
  	<label id="boardName"/>
  	<label id="joined"/>
  	<button txt="join" id="join"/>
  </rowlist>
  <row cols="2">
    <button txt="back" action="options" hw="1"/>
    <button id="PREV" txt="prev {1}/{2}" hw="1"/>
    <button id="NEXT" txt="next {1}/{2}" hw="1"/>
  </row>
</form>