<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">

    </style>

    <style name="HomeButtonStyle" parent="@android:style/Widget.Button.Inset">
        <item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="textViewScore" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#f00</item>
        <item name="android:background">#4000</item>
        <item name="android:padding">5dp</item>
    </style>

    <declare-styleable name="CheckerboardView">
        <attr name="outlineThickness" format="dimension"/>
    </declare-styleable>

    <!-- Style for dialog with transparent background -->
    <style name="DialogWithTransparentBackground" parent="@android:style/Theme.Material.Dialog.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
